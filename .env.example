# Server Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/stellaiverse

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=24h

# AI Services
OPENAI_API_KEY=your_openai_key
GROK_API_KEY=your_grok_key
LLAMA_API_BASE_URL=http://localhost:8000

# Blockchain
ETH_RPC_URL=https://mainnet.infura.io/v3/your-project-id
CHAIN_ID=1

# Redis (for caching and WebSocket)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=debug

# Email Service (Ethereal for testing, configure SMTP for production)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@stellaiverse.com
EMAIL_VERIFICATION_URL=http://localhost:3000/auth/verify-email

# OpenAI Configuration
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MAX_RETRIES=3
OPENAI_RETRY_DELAY=1000